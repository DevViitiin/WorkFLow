#: import get_color_from_hex kivy.utils.get_color_from_hex

<PerfilEmployeeGlobal>:
    name: 'PerfilEmployeeGlobal'
    md_bg_color: 1, 1, 1, 1

    MDFloatLayout:
        id: home

        MDIconButton:
            id: menu
            icon: 'arrow-left'
            theme_font_size: 'Custom'
            font_size: '35dp'
            theme_icon_color: 'Custom'
            icon_color: 'black'
            pos_hint: {'center_y': 0.93, 'center_x': 0.1}

        # Seção superior - Imagem e informações básicas
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.35
            padding: "10dp"
            spacing: "10dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.89}

            # Container da imagem - Fixo e centralizado
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.6
                padding: "10dp"

                MDBoxLayout:
                    size_hint: None, None
                    size: "130dp", "130dp"
                    pos_hint: {'center_x': 0.5}

                    AsyncImage:
                        id: perfil
                        source: root.avatar
                        allow_stretch: True
                        keep_ratio: True

        MDBoxLayout:
            size_hint: 1, 0.08
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.69}
            md_bg_color: 1, 1, 1, 1

            MDRelativeLayout:
                MDLabel:
                    text: root.employee_name
                    font_style: 'Title'
                    role: 'large'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.68}

                MDLabel:
                    text: root.employee_function
                    font_style: 'Title'
                    role: 'small'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.11
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.57}
            md_bg_color: 1, 1, 1, 1

            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'email'
                    theme_icon_color: 'Custom'
                    icon_color: 'grey'
                    pos_hint: {'center_y': 0.5}

                MDLabel:
                    text: root.employee_mail
                    pos_hint: {'center_y': 0.5}


            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'cellphone'
                    theme_icon_color: 'Custom'
                    icon_color: 'grey'
                    pos_hint: {'center_y': 0.5}

                MDLabel:
                    text: root.employee_telephone
                    pos_hint: {'center_y': 0.5}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.1
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}
            md_bg_color: 1, 1, 1, 1
            spacing: 10

            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'book-open-page-variant'
                    theme_icon_color: 'Custom'
                    icon_color: 0, 0, 1, 1
                    pos_hint: {'center_y': 0.6}

                MDLabel:
                    text: 'Resumo Profissional'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    pos_hint: {'center_y': 0.5}


            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDLabel:
                    text: root.employee_summary
                    font_style: 'Label'
                    role: 'large'
                    pos_hint: {'center_y': 0.5}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.12
            theme_bg_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.28}
            md_bg_color: 1, 1, 1, 1
            spacing: 10

            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]
                spacing: '5dp'

                MDIcon:
                    icon: 'medal'
                    theme_icon_color: 'Custom'
                    icon_color: 0, 0, 1, 1
                    pos_hint: {'center_y': 0.6}

                MDLabel:
                    text: 'Habilidades'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    pos_hint: {'center_y': 0.5}

            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10, 0]


                MDRelativeLayout:
                    MDScrollView:
                        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
                        do_scroll_y: False
                        do_scroll_x: True
                        size_hint: 1, 1

                        MDBoxLayout:
                            id: main_scroll
                            orientation: "horizontal"
                            size_hint_x: None  # Importante para permitir a rolagem horizontal
                            width: self.minimum_width
                            theme_bg_color: 'Custom'
                            md_bg_color: 1, 1, 1, 1

