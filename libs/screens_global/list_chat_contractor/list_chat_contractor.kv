<ListChatContractor>:
    name: 'ListChatContractor'
    md_bg_color: 'white'

    MDBoxLayout:
        orientation: 'vertical'
        
        MDBoxLayout:
            size_hint: 1, 0.25
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#ffffffff')

            MDRelativeLayout:
                MDLabel:
                    text: 'Conversas'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    font_style: 'Title'
                    role: 'large'
                    halign: 'left'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.75}
                
                MDIcon:
                    icon: 'chat-outline'
                    pos_hint: {'right': 0.95, 'center_y': 0.75}
                    theme_icon_color: 'Custom'
                    icon_color: 'blue'
                    theme_font_size: 'Custom'
                    font_size: '40dp'
                    
                MDTextField:
                    id: tp
                    radius: [20,]
                    size_hint_y: None
                    autocorrect: True
                    theme_line_color: 'Custom'
                    line_color_normal: get_color_from_hex('#afb7c4ff')
                    line_color_focus: get_color_from_hex('#2563EB')
                    height: '50dp'
                    size_hint_x: 0.9
                    on_text: root.search(self.text)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.3}

                    MDTextFieldLeadingIcon:
                        icon: "magnify"

                    MDTextFieldHintText:
                        id: hint
                        text: 'Digite o nome do usuario...'
                        padding: [10, 0, 0, 0]
                        theme_text_color: 'Custom'
                        text_color: get_color_from_hex('#9CA3AF')
                        pos_hint: {'center_x': 0.5, 'center_y': 0.25}

        MDBoxLayout:
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#ffffffff') 

            MDScrollView:
                do_scroll_x: False
                theme_bg_color: 'Custom'

                MDBoxLayout:
                    id: main_scroll
                    adaptive_height: True
                    orientation: 'vertical'
                    theme_bg_color: 'Custom'
                    md_bg_color: get_color_from_hex('#ffffffff') 
        
        MDNavigationBar:
            animation: False
            theme_bg_color: 'Custom'
            md_bg_color: 'white'

            MDNavigationItem:
                id: chat
                active: root.current_nav_state == 'chat'

                MDNavigationItemIcon:
                    icon: 'chat-processing'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'
                    
            MDNavigationItem:
                id: search
                active: root.current_nav_state == 'search'
                on_release: root.search()

                MDNavigationItemIcon:
                    id: icon_search
                    icon: 'magnify'
                    theme_icon_color: 'Custom'
                    icon_color: 0.5, 0.5, 0.5, 1

            MDNavigationItem:
                id: request
                active: root.current_nav_state == 'request'
                on_release: root.request()

                MDNavigationItemIcon:
                    id: icon_request
                    icon: 'clipboard-list'
                    theme_icon_color: 'Custom'
                    icon_color: 0.5, 0.5, 0.5, 1

            MDNavigationItem:
                id: perfil
                active: root.current_nav_state == 'perfil'
                on_release: root.passo()

                MDNavigationItemIcon:
                    id: icon_perfil
                    icon: 'account-outline'
                    theme_icon_color: 'Custom'
                    icon_color_active: 'blue'
