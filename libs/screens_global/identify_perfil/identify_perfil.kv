#: import get_color_from_hex kivy.utils.get_color_from_hex

<IdentifyPerfil>:
    name: 'IdentifyPerfil'
    md_bg_color: get_color_from_hex('#44CF6C')

    MDFloatLayout:
        MDBoxLayout:
            size_hint: 1, 0.1
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#F2F2F2')
            pos_hint: {'center_x': 0.5, 'top': 1}

            MDRelativeLayout:
                MDIconButton:
                    icon: 'arrow-left'
                    theme_icon_color: 'Custom'
                    icon_color: 'black'
                    pos_hint: {'center_x': 0.08, 'center_y': 0.35}
                    on_release: root.back_screen()

                MDLabel:
                    text: 'Confirmar Denúncia'
                    halign: 'left'
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    bold: True
                    pos_hint: {'center_y': 0.5, 'center_x': 0.66}
                
                MDLabel:
                    text: 'Verifique se é a pessoa correta'
                    halign: 'left'
                    font_style: 'Label'
                    role: 'large'
                    theme_text_color: 'Custom'
                    text_color: 'grey'
                    pos_hint: {'center_y': 0.22, 'center_x': 0.66}
        
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.5
            radius: 15
            theme_bg_color: 'Custom'
            radius: [20,]
            md_bg_color: get_color_from_hex('#D7EAFE')
            pos_hint: {'center_x': 0.5, 'top': 0.8}

            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                md_bg_color: get_color_from_hex('#ffffffff')
                size_hint_y: 0.35
                radius: [20, 20, 0, 0]

                MDBoxLayout:
                    size_hint_x: 0.4

                    AsyncImage:
                        source: root.avatar
                        radius: [100,]
                        size_hint: 0.8, 0.8
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDBoxLayout:
                    MDRelativeLayout:
                        MDLabel:
                            text: root.nami
                            font_style: 'Title'
                            role: 'medium'
                            theme_text_color: 'Custom'
                            text_color: 'black'
                            halign: 'left'
                            bold: True
                            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                        
                        MDLabel:
                            text: root.email
                            font_style: 'Body'
                            role: 'small'
                            theme_text_color: 'Custom'
                            text_color: 'black'
                            halign: 'left'
                            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            
            MDBoxLayout:
                theme_bg_color: 'Custom'
                md_bg_color: get_color_from_hex('#D7EAFE')
                radius: [0, 0, 20, 20]
                
                MDRelativeLayout:
                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, 0.2
                        theme_bg_color: 'Custom'
                        pos_hint: {'center_x': 0.5, 'top': 1}
                        padding: [10, 0, 0, 0]
                        md_bg_color: get_color_from_hex('#D7EAFE')
                        
                        MDBoxLayout:
                            theme_bg_color: 'Custom'
                            md_bg_color: get_color_from_hex('#D7EAFE')
                            size_hint_x: 0.2

                            MDRelativeLayout:
                                MDIcon:
                                    icon: 'account-tie-hat'
                                    theme_icon_color: 'Custom'
                                    icon_color: 'black'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                        MDBoxLayout:
                            theme_bg_color: 'Custom'
                            md_bg_color: get_color_from_hex('#D7EAFE')

                            MDRelativeLayout:
                                MDLabel:
                                    id: type
                                    text: 'Contratante'
                                    theme_text_color: 'Custom'
                                    text_color: 'black'
                                    halign: 'left'
                                    bold: True
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.9, 0.42
                        pos_hint: {'center_x': 0.5, 'center_y': 0.57}
                        theme_bg_color: 'Custom'
                        md_bg_color: get_color_from_hex('#E4CC37')
                        radius: [15,]

                        MDBoxLayout:
                            theme_bg_color: 'Custom'
                            md_bg_color: get_color_from_hex('#FFF6D1')
                            radius: [15, 15, 0, 0]
                            padding: [10, 0, 0, 0]

                            MDRelativeLayout:
                                MDIcon:
                                    icon: 'alert'
                                    theme_icon_color: 'Custom'
                                    icon_color: 'grey'
                                    pos_hint: {'left': 0.95, 'center_y': 0.55}
                                
                                MDLabel:
                                    text: 'Confirme a pessoa'     
                                    theme_text_color: 'Custom'
                                    bold: True
                                    text_color: 'grey'
                                    pos_hint: {'center_x': 0.6, 'center_y': 0.5}
                                    halign: 'left'

                        MDBoxLayout:
                            theme_bg_color: 'Custom'
                            md_bg_color: get_color_from_hex('#FFF6D1')
                            radius: [0, 0, 15, 15]
                            padding: [10, 0, 0, 0]

                            MDRelativeLayout:
                                MDLabel:
                                    text: "Verifique se esta é realmente a pessoa que você deseja denunciar. Esta ação não poderá ser desfeita."
                                    theme_text_color: 'Custom'
                                    font_style: 'Label'
                                    role: 'small'
                                    text_color: 'grey'
                                    halign: 'left'
                                    bold: True
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.7}

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint: 0.9, 0.2
                        theme_bg_color: 'Custom'
                        pos_hint: {'center_x': 0.5, 'top': 0.3}
                        md_bg_color: get_color_from_hex('#D7EAFE')    
                        spacing: 5

                        MDBoxLayout:
                            md_bg_color: get_color_from_hex('#D7EAFE')  
                            theme_bg_color: 'Custom'

                            MDRelativeLayout:
                                MDCard:
                                    theme_bg_color: 'Custom'
                                    md_bg_color: get_color_from_hex('#ffffffff')
                                    size_hint: 1, 1
                                    padding: [5,]
                                    on_release: root.back_screen()
                                    
                                    MDRelativeLayout:
                                        MDLabel:
                                            text: 'Não é essa pessoa'
                                            halign: 'center'
                                            font_style: 'Label'
                                            bold: True
                                            role: 'medium'
                                            theme_text_color: 'Custom'
                                            text_color: 'black'
                                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                        MDBoxLayout:
                            md_bg_color: get_color_from_hex('#D7EAFE')    
                            theme_bg_color: 'Custom'

                            MDRelativeLayout:
                                MDCard:
                                    theme_bg_color: 'Custom'
                                    md_bg_color: get_color_from_hex('#4056F4')
                                    size_hint: 1, 1
                                    padding: [5,]
                                    on_release: root.next_screen()
                                    
                                    MDRelativeLayout:
                                        MDLabel:
                                            text: 'Confirmar e Continuar'
                                            halign: 'center'
                                            font_style: 'Label'
                                            bold: True
                                            role: 'medium'
                                            theme_text_color: 'Custom'
                                            text_color: 'black'
                                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

