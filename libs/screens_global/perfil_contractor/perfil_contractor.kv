#: import get_color_from_hex kivy.utils.get_color_from_hex

<PerfilContractorGlobal>:
    name: 'PerfilContractorGlobal'
    md_bg_color: 'white'

    MDFloatLayout:
        id: home

        MDIconButton:
            id: menu
            icon: 'arrow-left'
            theme_font_size: 'Custom'
            font_size: '35dp'
            theme_icon_color: 'Custom'
            icon_color: 'black'
            pos_hint: {'center_y': 0.93, 'center_x': 0.1}
            on_release: root.back_chat()
            
        # Seção superior - Imagem e informações básicas
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.35
            padding: "10dp"
            spacing: "10dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.89}

            # Container da imagem - Fixo e centralizado
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.6
                padding: "10dp"

                MDBoxLayout:
                    size_hint: None, None
                    size: "150dp", "150dp"
                    pos_hint: {'center_x': 0.5}

                    AsyncImage:
                        id: perfil
                        source: root.avatar
                        allow_stretch: True
                        keep_ratio: True

        MDBoxLayout:
            orientation: 'vertical'
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            size_hint: 0.95, 0.08
            padding: [0, 10, 0, 0]
            radius: [15,]
            pos_hint: {'center_x': 0.5, 'top': 0.72}

            MDLabel:
                id: username
                text: f'{root.username}'
                font_style: 'Title'
                role: 'large'
                bold: True
                halign: 'center'
                pos_hint: {'center_x': 0.5, 'top': 0.5}

            MDLabel:
                id: company
                text: root.company
                font_style: 'Title'
                role: 'medium'
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 'grey'
                pos_hint: {'center_x': 0.5, 'top': 0.5}

        MDBoxLayout:
            orientation: 'vertical'
            theme_bg_color: 'Custom'
            md_bg_color: 1, 1, 1, 1
            size_hint: 0.95, 0.1
            pos_hint: {'center_x': 0.5, 'top': 0.62}

            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1
                padding: [10, 0, 10 ,0]

                MDBoxLayout:
                    theme_bg_color: 'Custom'
                    md_bg_color: 1, 1, 1, 1

                    MDLabel:
                        id: locate
                        text: f'{root.city}, {root.state}'
                        font_style: 'Label'
                        role: 'large'
                        bold: True
                        theme_text_color: 'Custom'
                        text_color: 'blue'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDBoxLayout:
                    theme_bg_color: 'Custom'
                    md_bg_color: 1, 1, 1, 1

                    MDLabel:
                        id: function
                        text: f'{root.function}'
                        font_style: 'Label'
                        role: 'large'
                        halign: 'center'
                        bold: True
                        theme_text_color: 'Custom'
                        text_color: get_color_from_hex('FCBA04')
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}


            MDBoxLayout:
                orientation: 'horizontal'
                theme_bg_color: 'Custom'
                md_bg_color: 1, 1, 1, 1


        MDCard:
            style: 'elevated'
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}  # Posicionamento ajustado
            size_hint: 0.9, 0.1  # Altura ajustada para uniformidade
            theme_bg_color: 'Custom'
            radius: [10,]
            focus: False
            md_bg_color: 'white'


            MDRelativeLayout:

                MDIcon:
                    icon: 'email'
                    pos_hint: {'center_x': 0.08, 'top': 0.9}

                MDLabel:
                    text: 'E-mail'
                    bold: True
                    halign: 'center'
                    pos_hint: {'center_x': 0.23, 'center_y': 0.73}

                MDLabel:
                    id: email
                    text: root.email
                    font_style: 'Title'
                    role: 'medium'
                    halign: 'left'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.3}

        MDCard:
            style: 'elevated'
            pos_hint: {'center_x': 0.5, 'center_y': 0.47}  # Posicionamento ajustado
            size_hint: 0.9, 0.1  # Altura ajustada para uniformidade
            theme_bg_color: 'Custom'
            radius: [10,]
            md_bg_color: 'white'

            MDRelativeLayout:

                MDIcon:
                    icon: 'cellphone'
                    pos_hint: {'center_x': 0.08, 'top': 0.9}

                MDLabel:
                    text: 'Telefone'
                    bold: True
                    halign: 'center'
                    pos_hint: {'center_x': 0.24, 'center_y': 0.73}

                MDLabel:
                    id: telefone
                    text: root.telefone
                    font_style: 'Title'
                    role: 'small'
                    halign: 'left'
                    pos_hint: {'center_x': 0.55, 'center_y': 0.3}
