#: import get_color_from_hex kivy.utils.get_color_from_hex

<ReportChat>:
    name: 'ReportChat'
    md_bg_color: get_color_from_hex('#eff6ffe1')

    MDFloatLayout:

        MDBoxLayout:
            size_hint: 0.9, 0.9
            theme_bg_color: 'Custom'
            md_bg_color: get_color_from_hex('#f3f4f6d3')
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            radius: [15,]

            MDRelativeLayout:
                MDBoxLayout:
                    size_hint: 1, 0.1
                    radius: [15, 15, 0, 0]
                    pos_hint: {'center_x': 0.5, 'top': 1}
                    theme_bg_color: 'Custom'
                    md_bg_color: 'white'

                    MDBoxLayout:
                        size_hint_x: 0.3

                        MDRelativeLayout:
                            MDBoxLayout:
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                size_hint: 0.75, 0.75
                                radius: [15,]
                                theme_bg_color: 'Custom'
                                md_bg_color: get_color_from_hex('#EC4899')

                                MDRelativeLayout:
                                    MDIcon:
                                        icon: 'chat-alert-outline'
                                        theme_icon_color: 'Custom'
                                        theme_font_size: 'Custom'
                                        font_size: '30dp'
                                        icon_color: 'white'
                                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}


                    MDBoxLayout:
                        theme_bg_color: 'Custom'
                        md_bg_color: get_color_from_hex('#ffffffff')
                        radius: [15,]
                        
                        MDRelativeLayout:
                            MDLabel:
                                text: 'Reportar Conversa'
                                theme_text_color: 'Custom'
                                text_color: 'black'
                                halign: 'left'
                                bold: True
                                pos_hint: {'center_x': 0.55, 'center_y': 0.6}
                            
                            MDLabel:
                                text: 'Ajude-nos a manter um ambiente seguro'
                                theme_text_color: 'Custom'
                                text_color: 'black'
                                halign: 'left'
                                font_style: 'Body'
                                role: 'small'
                                bold: False
                                pos_hint: {'center_x': 0.55, 'center_y': 0.3}

                MDBoxLayout:
                    size_hint: 0.9, 0.13
                    pos_hint: {'center_x': 0.5, 'top': 0.85}
                    theme_bg_color: 'Custom'
                    radius: [15,]
                    md_bg_color: get_color_from_hex('#ffffffff')

                    MDBoxLayout:
                        size_hint_x: 0.18
                        radius: [15,]
                        MDRelativeLayout:
                            MDIcon:
                                icon: 'alert-circle-outline'
                                theme_icon_color: 'Custom'
                                icon_color: 'blue'
                                theme_font_size: 'Custom'
                                font_size: '35dp'
                                pos_hint: {'center_x': 0.65, 'center_y': 0.5}

                    MDBoxLayout:
                        theme_bg_color: 'Custom'
                        md_bg_color: 'white'
                        radius: [15,]
                        MDRelativeLayout:
                            MDLabel:
                                text: 'Sua denúncia é confidencial'
                                theme_text_color: 'Custom'
                                bold: True
                                text_color: 'black'
                                padding: [5, 0, 0, 0]
                                halign: 'left'
                                pos_hint: {'center_x': 0.52, 'center_y': 0.7}
                            
                            MDLabel:
                                text: 'Todas as denúncias são analisadas pela nossa equipe de moderação em até 24 horas.'
                                font_style: 'Label'
                                role: 'small'
                                theme_text_color: 'Custom'
                                bold: False
                                text_color: 'black'
                                padding: [5,]
                                halign: 'left'
                                pos_hint: {'center_x': 0.52, 'center_y': 0.35}
                
                MDBoxLayout:
                    size_hint_y: None
                    height: '105dp'
                    spacing: 10
                    padding: [5,10, 5, 5]
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}

                    MDRelativeLayout:
                        MDLabel:
                            text: 'Motivo da denuncia'
                            halign: 'left'
                            font_style: 'Title'
                            role: 'medium'
                            theme_text_color: 'Custom'
                            text_color: 'black'
                            bold: True
                            pos_hint: {'center_x': 0.55, 'center_y': 0.8}

                        MDCard:
                            id: motive_card
                            theme_bg_color: 'Custom'
                            md_bg_color: get_color_from_hex('#ffffffff')
                            size_hint: 0.9, 0.5
                            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
                            on_release: root.open_menu()

                            MDRelativeLayout:
                                MDLabel:
                                    id: motive_text
                                    text: 'Selecione o motivo'
                                    theme_text_color: 'Custom'
                                    text_color: 'black'
                                    halign: 'left'
                                    pos_hint: {'center_x': 0.55, 'center_y': 0.5}

                                MDIcon:
                                    icon: 'arrow-down'
                                    theme_icon_color: 'Custom'
                                    icon_color: 'black'
                                    pos_hint: {'right': 0.9, 'center_y': 0.5}
                
                MDBoxLayout:
                    size_hint_y: None
                    height: '120dp'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}

                    MDRelativeLayout:
                        MDLabel:
                            text: 'Descrição Detalhada do Ocorrido *'
                            halign: 'left'
                            font_style: 'Title'
                            role: 'medium'
                            theme_text_color: 'Custom'
                            text_color: 'black'
                            bold: True
                            pos_hint: {'center_x': 0.55, 'center_y': 0.9}

                        MDTextField:  
                            id: description_field 
                            mode: "filled"  
                            size_hint_x: 0.9
                            autocorrect: True
                            theme_line_color: 'Custom'
                            line_color_focus: 'blue'
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                            MDTextFieldHintText:
                                text: 'Descreva em detalhes o ocorrido' 
                                halign: 'center'
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                
                MDBoxLayout:
                    size_hint: 0.9, 0.13
                    pos_hint: {'center_x': 0.5, 'center_y': 0.25}
                    theme_bg_color: 'Custom'
                    radius: [15,]
                    md_bg_color: get_color_from_hex('#ffffffff')

                    MDBoxLayout:
                        theme_bg_color: 'Custom'
                        md_bg_color: 'white'
                        radius: [15,]
                        MDRelativeLayout:
                            
                            MDLabel:
                                markup: True
                                text: "[color=#FFA62B]Importante:[/color] [color=#000000]Denúncias falsas podem resultar em suspensão da sua conta. Certifique-se de que as informações fornecidas são verdadeiras.[/color]"
                                font_style: "Label"
                                role: "small"
                                theme_text_color: "Custom"
                                bold: False
                                text_color: 1, 1, 1, 1  # Não usado quando 'markup' está ligado
                                padding: [5,]
                                halign: "center"
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}


                MDBoxLayout:
                    size_hint: 0.9, 0.1
                    theme_bg_color: 'Custom'
                    md_bg_color: get_color_from_hex('#EDEDED')
                    pos_hint: {'center_x': 0.5, 'center_y': 0.06}

                    MDBoxLayout:
                        theme_bg_color: 'Custom'
                        md_bg_color: get_color_from_hex('#EDEDED')
                        padding: [5,]

                        MDCard:
                            on_release: root.back_chat()
                            
                            RelativeLayout:

                                MDLabel:
                                    text: "cancelar"
                                    theme_text_color: 'Custom'
                                    text_color: 'black'
                                    font_style: 'Title'
                                    role: 'small'
                                    color: "grey"
                                    halign: 'center'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                    bold: True

                    MDBoxLayout:
                        theme_bg_color: 'Custom'
                        md_bg_color: get_color_from_hex('#EDEDED')
                        padding: [5,]

                        MDCard:
                            theme_bg_color: 'Custom'
                            md_bg_color: get_color_from_hex('#ff0000ff')
                            on_release: root.step_one()
                            RelativeLayout:

                                MDLabel:
                                    text: "Enviar Denúncia"
                                    theme_text_color: 'Custom'
                                    text_color: 'white'
                                    font_style: 'Title'
                                    role: 'small'
                                    color: "grey"
                                    halign: 'center'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                    bold: True
